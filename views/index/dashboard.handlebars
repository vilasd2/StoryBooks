<h3>Welcome {{user.firstName}},</h3>
<h5>Your Stories</h5>


{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/show/{{id}}">{{title}}</a></td>
            <td>{{formatDate date 'MMMM Do YYYY'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a class="btn left-align" href="/stories/edit/{{id}}">
                    <i class="fa fa-pencil"></i> Edit</a>

                <form action="/stories/{{id}}?_method=DELETE" id="delete-form" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i id="deleteBtn" class="fa fa-remove"></i> Delete</button>


                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<p>You have not created any stories yet</p>
{{/if}}